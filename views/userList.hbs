{{!-- UserList --}}
<h1>Lista de usuarios</h1>

{{!-- searchBar -> search user by name --}}
<form id="searchUser">
  <input type="text" placeholder="Buscar por nombre de usuario..." />
</form>
<br/>
<br/>
<div id="userList">
  <h2 class="title">Users</h2>
  {{!-- Iteration over users --}}
  <ul>
    {{#each user as |val|}}
    <li>
      <span class="name">
        <span class="tag"> Nombre:</span> {{val.name}} </span>
      <span>
        <span class="tag"> Apellido:</span> {{ val.lastname}} </span>
      <span>
        <span class="tag"> Telefono:</span> {{ val.phone}} </span>
      <span>
        <span class="tag"> Email:</span> {{ val.email}} </span>
      <!--<button class="delete">Eliminar</button>-->
    </li>
    {{/each}}
  </ul>
</div>

<a class="link" href="/user/form">Volver al form</a>

{{!-- searchBar function /public/javascripts/searchBar.js --}}
<script src="/javascripts/searchBar.js"></script>